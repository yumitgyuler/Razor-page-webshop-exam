<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SinusSkateboards.UI</title>
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Tablet & Mobile --->
    <link rel="stylesheet" media="(max-width:1024px)" href="~/css/tablet.css" />
    <link rel="stylesheet" media="(max-width:500px)" href="~/css/mobile.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link href="~/css/all.css" rel="stylesheet" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light nav-bg-color">
            <div class="container container-fluid nav-bg-color">
                <a class="navbar-brand" aria-current="page" asp-page="/Index"><img
                        src="~/images/logos/sinus-logo-landscape-large.png"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end nav-bg-color" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Shop/Categories">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Admin/Index"><i class="fa-solid fa-user nav-icon"></i></i> My
                                Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Shop/Cart"><i class="fa-solid fa-cart-shopping nav-icon"></i>
                                Cart</a>
                        </li>
                        <form asp-page="/Index" asp-page-handler="Currency" asp-route-currency="SEK"
                            asp-route-path="@Context.Request.Path" method="post">
                            <li class="nav-item currency">
                                <button class="btn currency">SEK | </button>
                            </li>
                        </form>
                        <form asp-page="/Index" asp-page-handler="Currency" asp-route-currency="EUR"
                            asp-route-path="@Context.Request.Path" method="post">
                            <li class="nav-item currency">
                                <button class="btn currency">EUR</button>
                            </li>
                        </form>
                    </ul>
                    <div class="serach-bar ms-3">
                        <form asp-page="/Shop/Categories" asp-page-handler="Serach" method="post">
                            <input type="text" class="form-control form-input search-text me-5"
                                placeholder="Search anything..." name="searchText" />
                            <span class="left-button">
                                <button class="btn currency">
                                    <i class="fa-solid fa-magnifying-glass"></i>
                                </button>
                            </span>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    @RenderBody()
    <footer class="footer text-muted">
        <div class="container">
            <div class="row pt-5 text-center">
                <div class="col-xl-3 col-12"><img src="~/images/logos/sinus-logo-portrait-large.png"
                        style="max-height: 250px; max-width: 200px;"> </div>
                <div class="col-xl-3 col-12">
                    <h5 class="footer-h5">Categories</h5>
                    <ul class="navbar-nav footer-nav">
                        <li class="nav-item">Skateboard</li>
                        <li class="nav-item">Hoodie</li>
                        <li class="nav-item">T-shirt</li>
                        <li class="nav-item">Caps</li>
                        <li class="nav-item">Skateboard Wheels</li>
                    </ul>
                </div>
                <div class="col-xl-3 col-12">
                    <h5 class="footer-h5">Customer Care</h5>
                    <ul class="navbar-nav footer-nav">
                        <li class="nav-item">My Account</li>
                        <li class="nav-item">Orders History</li>
                        <li class="nav-item">Order Tracking</li>
                    </ul>
                </div>
                <div class="col-xl-3 col-12">
                    <h5 class="footer-h5">Pages</h5>
                    <ul class="navbar-nav footer-nav">
                        <li class="nav-item">Home Page</li>
                        <li class="nav-item">Shop</li>
                        <li class="nav-item">Contact Us</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="mt-3" style="background-color: #9BA1B3; color:#393D4B;">

            <div class="container container-fluid">
                <div class="d-xl-flex bd-highlight">
                    <div class="flex-grow-1 bd-highlight">&copy; 2021 - Yumit Gyuler - All Rights Reserved</div>
                    <div class="bd-highlight"><i class="fa-brands fa-facebook pe-2"></i><i
                            class="fa-brands fa-instagram pe-2"></i><i class="fa-brands fa-twitter pe-2"></i></div>
                </div>
            </div>

        </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
